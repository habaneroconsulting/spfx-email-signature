{
  "name": "spfx-email-signatures",
  "version": "1.5.0",
  "private": true,
  "engines": {
    "node": ">=22.14.0 < 23.0.0"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "gulp build",
    "bundle": "gulp bundle",
    "clean": "gulp clean",
    "dev": "gulp clean && gulp bundle && gulp package-solution",
    "dist": "gulp clean --ship && gulp bundle --ship && gulp package-solution --ship",
    "package-solution": "gulp package-solution",
    "postversion": "git push && git push --tags",
    "prettier": "prettier --write {config,scripts,src}/**/*",
    "preversion": "node ./scripts/preversion.js $npm_package_version %npm_package_version% && git add .",
    "serve": "gulp serve --nobrowser",
    "serve:browser": "gulp serve",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll",
    "version-major": "npm version major -m \"Major version bump to %s\"",
    "version-minor": "npm version minor -m \"Minor version bump to %s\"",
    "version-patch": "npm version patch -m \"Patch version bump to %s\""
  },
  "dependencies": {
    "@emotion/react": "11.14.0",
    "@fluentui/react": "8.123.6",
    "@microsoft/sp-core-library": "1.21.1",
    "@microsoft/sp-lodash-subset": "1.21.1",
    "@microsoft/sp-property-pane": "1.21.1",
    "@microsoft/sp-webpart-base": "1.21.1",
    "@pnp/spfx-property-controls": "3.21.0",
    "canvas": "3.2.0",
    "clipboard-polyfill": "4.1.1",
    "mustache": "4.2.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-transition-group": "4.4.5"
  },
  "devDependencies": {
    "@microsoft/eslint-config-spfx": "1.21.1",
    "@microsoft/eslint-plugin-spfx": "1.21.1",
    "@microsoft/rush-stack-compiler-4.7": "0.1.1",
    "@microsoft/sp-build-web": "1.21.1",
    "@microsoft/sp-module-interfaces": "1.21.1",
    "@rushstack/eslint-config": "4.4.0",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "12.1.4",
    "@types/es6-promise": "3.3.2",
    "@types/mustache": "4.2.6",
    "@types/react": "17.0.45",
    "@types/react-dom": "17.0.17",
    "@types/react-transition-group": "4.4.12",
    "@types/testing-library__jest-dom": "6.0.0",
    "@types/webpack-env": "1.18.8",
    "ajv": "8.17.1",
    "eslint": "8.57.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "gulp": "5.0.1",
    "jest": "30.1.3",
    "jest-environment-jsdom": "30.1.2",
    "jest-junit": "16.0.0",
    "jest-transform-stub": "2.0.0",
    "prettier": "3.6.2",
    "ts-jest": "29.4.2",
    "typescript": "4.7.4",
    "webpack-bundle-analyzer": "4.10.2"
  },
  "overrides": {},
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "text",
      "json",
      "lcov",
      "text-summary",
      "cobertura"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "@fluentui/react/lib/(.*)$": "@fluentui/react/lib-commonjs/$1",
      "@ms/odsp-core-bundle": "jest-transform-stub",
      "@msinternal/ecs-flight": "jest-transform-stub",
      "^.+\\.(resx)$": "jest-transform-stub"
    },
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "suiteName": "SPFx unit test",
          "outputDirectory": "./reports/",
          "outputName": "./junit.xml"
        }
      ]
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "lib/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?|tsx?)$",
    "transform": {
      "^.+\\.(js|ts|tsx)$": "ts-jest",
      "^.+\\.(resx)$": "jest-transform-stub"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@microsoft/sp-core-library/.*))"
    ]
  }
}
