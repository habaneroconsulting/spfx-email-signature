{
  "name": "spfx-email-signatures",
  "version": "1.2.0",
  "private": true,
  "engines": {
    "node": ">=16.13.0 <17.0.0"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "gulp build",
    "bundle": "gulp bundle",
    "clean": "gulp clean",
    "dev": "gulp clean && gulp bundle && gulp package-solution",
    "dist": "gulp clean --ship && gulp bundle --ship && gulp package-solution --ship",
    "package-solution": "gulp package-solution",
    "postversion": "git push && git push --tags",
    "prettier": "prettier --write {config,scripts,src}/**/*",
    "preversion": "node ./scripts/preversion.js $npm_package_version %npm_package_version% && git add .",
    "serve": "gulp serve --nobrowser",
    "serve:browser": "gulp serve",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll",
    "version-major": "npm version major -m \"Major version bump to %s\"",
    "version-minor": "npm version minor -m \"Minor version bump to %s\"",
    "version-patch": "npm version patch -m \"Patch version bump to %s\""
  },
  "dependencies": {
    "@emotion/react": "11.11.1",
    "@fluentui/react": "^7.199.1",
    "@microsoft/sp-core-library": "1.17.3",
    "@microsoft/sp-lodash-subset": "1.17.3",
    "@microsoft/sp-property-pane": "1.17.3",
    "@microsoft/sp-webpart-base": "1.17.3",
    "@pnp/spfx-property-controls": "3.13.0",
    "canvas": "2.11.2",
    "clipboard-polyfill": "4.0.0",
    "mustache": "4.2.0",
    "office-ui-fabric-react": "^7.199.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-transition-group": "4.4.5"
  },
  "devDependencies": {
    "@microsoft/eslint-config-spfx": "1.17.2",
    "@microsoft/eslint-plugin-spfx": "1.17.2",
    "@microsoft/rush-stack-compiler-4.5": "0.5.0",
    "@microsoft/sp-build-web": "1.17.3",
    "@microsoft/sp-module-interfaces": "1.17.3",
    "@microsoft/sp-webpart-workbench": "1.12.1",
    "@rushstack/eslint-config": "2.5.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "12.1.5",
    "@types/es6-promise": "0.0.33",
    "@types/mustache": "4.2.2",
    "@types/react": "17.0.45",
    "@types/react-dom": "17.0.17",
    "@types/react-transition-group": "4.4.6",
    "@types/testing-library__jest-dom": "5.14.6",
    "@types/webpack-env": "1.18.1",
    "ajv": "^6.12.5",
    "eslint": "8.7.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "gulp": "4.0.2",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "jest-junit": "16.0.0",
    "jest-transform-stub": "2.0.0",
    "prettier": "2.8.8",
    "ts-jest": "29.1.0",
    "typescript": "4.5.5",
    "webpack-bundle-analyzer": "4.9.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "text",
      "json",
      "lcov",
      "text-summary",
      "cobertura"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "@fluentui/react/lib/(.*)$": "@fluentui/react/lib-commonjs/$1",
      "@ms/odsp-core-bundle": "jest-transform-stub",
      "moduleNameMapper": {
        "^.+\\.(resx)$": "jest-transform-stub"
      }
    },
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "suiteName": "SPFx unit test",
          "outputDirectory": "./reports/",
          "outputName": "./junit.xml"
        }
      ]
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "lib/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?|tsx?)$",
    "transform": {
      "^.+\\.(js|ts|tsx)$": "ts-jest",
      "^.+\\.(resx)$": "jest-transform-stub"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@microsoft/sp-core-library/lib-commonjs/SPCoreLibraryStrings.resx))"
    ]
  }
}
